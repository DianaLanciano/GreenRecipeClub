<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CCD9C3">

    <ImageView
        android:id="@+id/row_inList_img_imgOfRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fish"
        tools:layout_editor_absoluteX="22dp" />

    <TextView
        android:id="@+id/row_inList_text_titleOfRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="RecipeName"
        app:layout_constraintStart_toEndOf="@+id/row_inList_img_imgOfRecipe"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/row_inList_text_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/row_inList_img_imgOfRecipe"
        app:layout_constraintTop_toBottomOf="@+id/row_inList_text_titleOfRecipe" />

    <TextView
        android:id="@+id/row_inList_text_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/row_inList_text_category"
        tools:layout_editor_absoluteX="102dp" />
</androidx.constraintlayout.widget.ConstraintLayout>